{
  "name": "cms",
  "license": "UNLICENSED",
  "scripts": {
    "generate-schema": "cat schema/* > schema.graphql",
    "prepare:rinkeby": "yarn mustache config/rinkeby.json subgraph.template.yaml subgraph.yaml",
    "prepare:rinkeby:test": "yarn mustache config/rinkeby-test.json subgraph.template.yaml subgraph.yaml --test",
    "prepare:rinkeby:test-2": "yarn mustache config/rinkeby-test-2.json subgraph.template.yaml subgraph.yaml --test",
    "prepare:goerli": "yarn mustache config/optimism-goerli.json subgraph.template.yaml subgraph.yaml",
    "prepare:local": "yarn mustache config/local.json subgraph.template.yaml subgraph.yaml",
    "prepare:mumbai": "yarn mustache config/mumbai.json subgraph.template.yaml subgraph.yaml",
    "codegen": "graph codegen subgraph.yaml",
    "build": "graph build",

    "deploy:rinkeby": "graph deploy --node https://api.thegraph.com/deploy/ grmkris/hello-world-cms-rinkeby subgraph.yaml",

    "generate-and-deploy:rinkeby": "yarn generate-schema && yarn prepare:rinkeby && yarn codegen && yarn build && yarn deploy:rinkeby",

    "create-local": "graph create --node http://localhost:8020/ TIDV/indexer",
    "remove-local": "graph remove --node http://localhost:8020/ TIDV/indexer"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "0.26.0",
    "@graphprotocol/graph-ts": "0.25.0",
    "as-base58": "^0.1.1",
    "mustache": "^4.2.0"
  },
  "devDependencies": {
    "matchstick-as": "^0.3.0"
  }
}
